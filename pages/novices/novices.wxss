/* pages/novices/novices.wxss */

.input{
    font-size:32rpx;
    padding:26rpx 40rpx;
    border:1px solid #E6E6E6;
    border-radius:8rpx;
}
.button{
    margin-top:40rpx;
}
.panel{
    background:#fff;
}

.select{
    border:1px solid #E6E6E6;
    border-radius:8rpx;
    margin-bottom:30rpx;
    padding:28rpx 40rpx;
    position:relative;display:flex;
    align-items:center;
    justify-content:space-between;
    font-size:32rpx;
}

.select:after{
    content:'';
    border:3rpx solid #191919;
    border-left:none;
    border-top:none;
    width:10px;
    height:10px;
    margin-top:-3px;
    transform:rotate(45deg);
}

.select picker{
    padding:27rpx 40rpx;
  
}

.picker{
    font-size:32rpx;
}
.area-hot{
    display:flex;
    flex-wrap:wrap;
    justify-content:space-between;
    padding:50rpx 0 20rpx 0;
}
.area{
    width:30%;
    text-align:center;
    background:#fff;
    border-radius:120rpx;
    font-size:32rpx;
   
    line-height:90rpx;
    margin:0 0 30rpx 0;
    position:relative;
}
.area:after{
    content:'';
    border:1px solid #F2F2F2;
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    top:0;
    width:200%;
    height:200%;
    transform:scale(.5);
    transform-origin:0 0;
    border-radius:120rpx;
    box-sizing:border-box;
}
.area.active{
    background:#03A699;
    color:#fff;
}
.area.active:after{
    border:none;
}
.step{
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    top:0;
    background:#fafafa;
}
.step .page-title{
    padding:39rpx 50rpx;
    margin:0 -50rpx;
    background:#fff;
}
.step .panel{
    padding-top:40rpx;
}
.step .panel .title-s{
    padding:0 0 30rpx 0;
    margin:0;
}
.step3{
    background:#fff;
}
.hide{
    display:none;
}

.info{
    font-size:26rpx;
    margin:46rpx 0;
    text-align:center;
    color:#4c4c4c;
}

.pickmask{
    background-image: -webkit-linear-gradient(90deg,rgba(255, 255, 255, .5) 0%,rgba(255, 255, 255, .5) 100%);
    display:block;
    background-repeat:space;
}

.grade{
    display:flex;
    text-align:center;
    justify-content:space-around;
}

.grade .name{
    color:#191919;
}

.grade view{
    padding:10rpx 40rpx;
    color:#03A699;
}

.grade .hide{
    display:none;
}

.childsex{
    text-align:center;
    display:flex;
    align-content:space-between;
    justify-content:space-between;
    margin:40rpx 0;
    flex-wrap:nowrap;
}

.childsex view{
    padding:26rpx 0;
    border: 2rpx solid #E6E6E6;
    border-radius: 100rpx;
    background:#fff;
    width:45%;
}

.childsex view.active{
    background:#03A699;
    color:#fff;
}
.childsex view.active{
    border:none;
}
.searchpage{
    display:none;
    position:fixed;
}

.searchpage.show{
    display:block;
}

.searchbar{
    position:relative;
}

.searchbar .ico{
    position:absolute;
    left:0;
    top:0;
    bottom:0;
    display:flex;
    align-items:center;
}

.searchinput{
    border-bottom:1px solid #E6E6E6;
    font-size:32rpx;
    padding:36rpx 50rpx 36rpx 60rpx;
    color:#333;
}

.clear{
    display:none;
    font-size:12px;
    position:absolute;
    right:0;
    top:0;
    bottom:0;
    align-items:center;
    color:#7F7F7F;
}

.clear.show{
    display:flex;
}
.schools{
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    top:120rpx;
}
.schools .item{
    padding:30rpx 0;
}

.name{
    font-size:32rpx;
    margin-bottom:10rpx;
    color:#191919;
}
.fullname{
    font-size:28rpx;
    color:#4C4C4C;
}
.datepicker picker-view{
    text-align:center;
    height:350rpx;
}
picker-view-column view{
    height:100rpx;
    line-height:100rpx;
    background:#F6F6F6;
}
picker-view-column{
     background:#F6F6F6;
}
.datepicker{
    background:#F6F6F6;
}
.titles{
    font-size:30rpx;
    margin-top:50rpx;
    color:#4c4c4c;
}

.citys{
    position:fixed;
    left:0;
    right:0;
    bottom:0;
    background:#fff;
    z-index:200;
    padding:50rpx 0;
    visibility:hidden;
}
.citys.show{
    display:block;
    animation:sliderUp .5s ease-in;
    visibility:inherit;
}
.mask{
    display:none;
    position:fixed;
    z-index:100;
    background:rgba(0,0,0,.5);
    visibility:hidden;
}
.mask.show{
    display:block;
    visibility:inherit;
    animation:fade .2s ease-in;
}

.areas{
    display:flex;
    flex-wrap:wrap;
    justify-content:space-between;
    align-content:flex-start;
    margin-bottom:-30rpx;
}
.area-item{
    width:30%;
    line-height:90rpx;
    font-size:32rpx;
    text-align:center;
    background:#F2F2F2;
    border-radius:200rpx;
    margin-bottom:30rpx;
}

.area-item.active{
    background:#03A699;
    color:#fff;
}


